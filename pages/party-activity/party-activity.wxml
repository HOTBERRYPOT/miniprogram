
<view class='item container'>
   <view class="cell_is free">
     <view class='title'> 活动发布 </view>
   </view>

   <view class='freeart' >
     <view class="tagtitle">活动摘要</view>
      <textarea placeholder="活动摘要(10-200字)" maxlength="200" placeholder-class="placeholder" class='multi_in' bindinput='freeContentInput' />
   </view>

   <view class='contentart'>
     <view class="tagtitle">活动详情</view>
     <textarea placeholder="输入活动内容" maxlength="-1" placeholder-class="placeholder" class='multi_in' bindinput='contentInput' />
   </view>

   <view class='picture'>
      <view class='emptyadd' bindtap='showpictures'></view>
      <view class='tagtitle addpic' >添加相关图片</view>
   </view>

   <view class='btns'>
    <button class='submit' hover-class="press_sub" bindtap="submit">发表文章</button>
  </view>
</view>

