/* pages/party-blog/party-blog.wxss */
.main-container{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 60rpx;
}

.btns {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  width: 100%;
  height: 84rpx;
  flex-wrap: nowrap;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  margin-top: 30rpx;margin-bottom: 20rpx;height: auto;width: max-content;background-color:#ddece8;
}
.btns .nav_btn {
  flex-shrink: 0;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  color: #333;
  font-size: 34rpx;
  border-bottom: 4rpx solid #fff;
}

.btns .nav_btn.selected {
  border-bottom: 4rpx solid #36b9af;
  color: #36b9af;
}


.tag {
  font-size: 1.2em;
  display: flex;align-items: center;justify-content: center;
  text-align: center;
  padding-bottom: 70rpx;
  padding-top: 70rpx;
  color: #50616D;

}
.btn-area{
  margin-top: 60rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  
}

  .short-card{
    margin: 20px;
    padding: 10px;
    width:200%;
    height: 380rpx;
    border-radius: 5rpx;
    border: 1rpx solid #8CC7B5;
    background-color:rgb(234, 246, 240) ;

  }
  .tagtitle{
    background-color: #8CC7B5;
    padding: 15rpx;
    color: #363333db;
    font-size: 40rpx;
    font-family: cursive;
}

.index-list-item{height: 150rpx;width: 100%;align-items: center;}